<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail COntact</h2>
      <% if (!contact) { %>
      <div
        class="alert alert-danger fw-bold"
        role="alert"
      >
        Upss... Contact is Not found
        <br />
        <a
          href="/contact"
          class="alert-link fw-normal"
          >&laquo; Return</a
        >
      </div>
      <% } else {%>
      <div
        class="card"
        style="width: 18rem"
      >
        <div class="card-body">
          <h5 class="card-title"><%= contact.name %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">
            <%= contact.phone %>
          </h6>
          <p class="card-text"><%= contact.email %></p>
          <div class="d-flex align-items-center gap-3">
            <a
              href="/contact/edit/<%= contact.name %>"
              class="btn btn-primary badge"
              >Edit</a
            >
            <a
              href="/contact/delete/<%= contact.name %>"
              class="btn btn-danger badge"
              onclick="return confirm('Are yout sure to delete this contact?');"
              >Delete</a
            >
          </div>
          <a
            href="/contact"
            class="card-link d-block mt-3"
            >&laquo; Return</a
          >
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
