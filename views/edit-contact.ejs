<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Edit Contact</h2>
      <% if (typeof errors !== "undefined") { %>
      <div
        class="alert alert-danger d-flex align-items-center"
        role="alert"
      >
        <ul>
          <% errors.forEach(err => { %>
          <li>
            <i class="bi bi-exclamation-triangle-fill"></i> <%= err.msg %>
          </li>
          <% }) %>
        </ul>
      </div>
      <% } %>
      <form
        method="post"
        action="/contact/update"
      >
        <input
          type="hidden"
          name="oldName"
          value="<%= contact.oldName? contact.oldName : contact.name %>"
        />
        <input
          type="hidden"
          name="oldEmail"
          value="<%= contact.oldEmail? contact.oldEmail :  contact.email %>"
        />
        <input
          type="hidden"
          name="oldPhone"
          value="<%= contact.oldPhone? contact.oldPhone : contact.phone %>"
        />
        <div class="mb-3">
          <label
            for="name"
            class="form-label"
            >Full Name</label
          >
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            value="<%= contact.name %>"
            required
          />
        </div>
        <div class="mb-3">
          <label
            for="email"
            class="form-label"
            >Email Address</label
          >
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            value="<%= contact.email %>"
            required
          />
        </div>
        <div class="mb-3">
          <label
            for="phone"
            class="form-label"
            >Number Phone</label
          >
          <input
            type="text"
            class="form-control"
            id="phone"
            name="phone"
            value="<%= contact.phone %>"
            required
          />
        </div>
        <button
          type="submit"
          class="btn btn-primary"
        >
          Update Contact
        </button>
      </form>
    </div>
  </div>
</div>
